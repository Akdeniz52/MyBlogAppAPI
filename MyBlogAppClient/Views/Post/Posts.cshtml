@model List<PostDTO>

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">New Posts</h1>
            @foreach(var post in Model)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="@post.Image" class="img-fluid rounded" alt="">
                        </div>
                        <div class="col-8">
                            <h5><a asp-controller="Post" asp-action="Details" asp-route-id="@post.PostId" class="btn-link fw-bold">@post.Title</a></h5>
                            <p>@post.Description</p>
                            <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Genel</a>
                        </div>
                    </div>
                </div>
                <hr class="my-3"> 

            }
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="" class="page-link">1</a></li>
                    <li class="page-item"><a href="" class="page-link">2</a></li>
                    <li class="page-item"><a href="" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    
</div>

